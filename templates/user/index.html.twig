{% extends 'base.html.twig' %}

{% block title %}List of users{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mb-3 mt-3">
                    <div class="card-body">
                        <div class="card-body">
                            <h3>List of users</h3>
                        </div>
                        {% if app.user != null %}
                            <table class="table">
                                <tr>
                                    <th>Username</th>
                                    <th width="100px">Action</th>
                                </tr>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.username }}</td>
                                        <td>
                                            {% if user.disabled %}
                                                <a class="btn btn-secondary"
                                                   href="{{ path('user_activate', {'id': user.id}) }}">
                                                    disabled
                                                </a>
                                            {% else %}
                                                <a class="btn btn-primary"
                                                   href="{{ path('user_deactivate', {'id': user.id}) }}">
                                                    disable
                                                </a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        {% endif %}
                        <div class="pagination justify-content-center">
                            {{ knp_pagination_render(users) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
